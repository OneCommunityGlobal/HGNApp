{{outlet}}
<div class= {{if errorlist "errorlist" ""}}>
    <ul id="errorlist">
        {{#each errorlist as |error|}}
            <li> {{error}}</li>
        {{/each}}
    </ul>
</div>
<form class=" {{isSubmitted}}" id="frmupdatepassword">
    <div class="form-group inline">
        <label for="id_current_password">Current Password</label>
        <input type="password" class="form-control" id="id_current_password" aria-describedby="currentpassword" placeholder="Current password"
            required onchange= {{action (mut currentpassword) value = "target.value"}}>
    </div>
    <div class="form-group inline">
        <label for="id_new_password">New Password</label>
        <input type="password" class="form-control" id="id_new_password" aria-describedby="newpassword" placeholder="New Password"
            required onchange= {{action (mut newpassword) value = "target.value"}}>
    </div>
    <div class="form-group inline">
        <label for="id_confirm_newpassword">Confirm Password</label>
        <input type="password" class="form-control" id="id_confirm_newpassword" aria-describedby="confirmpassword" placeholder="Confirm password"
            required onchange= {{action (mut confirmnewpassword) value = "target.value"}}>
    </div>
    <button type="cancel" {{ action "clearForm"}} class="btn btn-danger">Cancel</button>
    <button type="submit" {{action "updatePassword"}} class="btn btn-primary">Submit</button>
</form>