<div>
    <h4 class="card-title">Reports</h4>

    <form class="form-inline row" action="">

        <div class="form-group col-md-4">
            <select onchange={{action (mut option) value="target.value" }} required>
           {{#each projects as |project|}}
              <option value="" selected disabled hidden>Choose a project</option>
              <option value={{project._id}}>{{project.projectName}}</option>
           {{/each}}

         </select>
        </div>

        <div class="form-group col-md-4">
            <div>
                <input class="form-check-input" value=weekRange name="timeSelect" type="radio" onchange={{action (mut period) value="target.value" }}>
                <label class="form-check-label">
     Weekly Report :
   </label>
                <select class="" onchange={{action (mut weekselection) value="target.value" }}>
       <option value="0">Select a Week Range</option>
    <option value="9">Current Week</option>
     <option value="2">Past 2 weeks</option>
     <option value="4">Past 4 weeks</option>
     <option value= "6">Past 6 weeks</option>
   </select>
            </div>
            <div>
                <input class="form-check-input" value=customPeriod name="timeSelect" type="radio" onchange={{action (mut period) value="target.value" }}>
                <label class="form-check-label">
       Custom Period :
     </label>
                <form>
                    <label class="label" for="fromdate">From:</label>
                    <input type="date" class="form-control" id="FromDate" required>
                    <label class="label" for="todate">To:</label>
                    <input type="date" class="form-control" id="ToDate" required>
                </form>
            </div>
        </div>

        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-sm" {{action "submitForm"}}>Submit</button>
        </div>


    </form><br>

    <div class="">
        <h4 class="card-title">Project name: {{projectName}}</h4>
    </div>


    <p><i>Showing results for time period: {{dates.FromDate}} - {{dates.ToDate}}</i></p>
    <div>
        {{viewreports-charts timeentrydata = model.timeentrydata projectmembers=model.projectmembers previousweekdata = model.previuostimeentrydata weeks=week}}
    </div>

</div>
