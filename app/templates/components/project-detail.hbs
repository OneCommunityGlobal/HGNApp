{{yield}}

<div class="card-header">
  <a {{action 'toggleProjectDetail' }} class="card-link" data-toggle="collapse" data-parent="#accordion" href="#projectDetails">
          {{project.projectName}}
        </a>
</div>

{{#if isProjectDetail}}
  <form class="form-horizontal">
    <br>
    <div>Tasks: </div>
    <div class="form-group">
      <ul class="list-group">
        {{#each project.tasks as |task|}}
          <li class="list-group-item">
            <small>{{task.Description}}</small>
            <button class="btn" type="button" {{ action 'cancelTask' task}}><span class="glyphicon glyphicon-minus"></span></button>
          </li>
        {{/each}}
      </ul>

        <div class="col-lg-6">
          <div class="input-group>">
      {{input class="form-control required" type="text" placeholder= "Add Task..." value=task.Description }}
      <span class="input-group-btn">
        <button class="btn btn-secondary" type="button" {{ action 'addNewTask' }}>Add Task</button>
      </span>
      </div>
    </div>


    </div>

    <div class="form-check">
      <label >active
              <input class="form-check-input" type='radio' name='isActive' checked={{project.isActive}} onchange={{action (mut project.isActive) true}} />
      </label>
      <label >inactive
              <input class="form-check-input" type='radio' name='isActive' checked={{project.isActive}} onchange={{action (mut project.isActive) false}} />
      </label>

    </div>
    <button type="submit" class="btn btn-primary" {{ action 'postChanges' }} {{bind-attr disabled=disabled}}>Save</button>
    <button type="submit" class="btn btn-danger" {{ action 'destroyProject' project}} {{bind-attr disabled=disabled}}>Delete Project</button>


  </form>
{{/if}}
