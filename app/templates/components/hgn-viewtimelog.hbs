<div>
    <small>Viewing time Entries for {{perioddates}}</small>
</div>
{{#if timelogs}}
    <div class="table-responsive  h-100">
        <table class="table table-sm tbltimelog pre-scrollable" id="tbltimelog">
            <tbody>
                {{#each timelogsview as |timelog index|}}
                    <tr class="col-12 w-100 mb-3 row tr-tangible-{{timelog.isTangible}}" scope="row">
                        <form id="frmEditTimeEntry_{{index}}" class="w-100 form-inline" readonly= {{if (and isEditable (is-timeentry-within-week timelog.dateOfWork)) null "true"}}>
                            <div class="col-5 w-100">
                                <div class="row form-group">
                                    <label class="col-4 col-form-label">Date:</label>
                                    <input class="from-control" value= {{timelog.dateOfWork}} readonly>
                                    <div class="input-group">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input " value=true name="timeentrytypeoptions" type="radio" checked= {{if (eq timelog.isTangible true) "true"}}
                                                disabled= {{if (and isEditable (is-timeentry-within-week timelog.dateOfWork)) null "true"}}
                                                onclick= {{action (mut timelog.isTangible) value = "target.value"}}>
                                            <label class="form-check-label col-form-label">
                                                Tangible
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" value=false name="timeentrytypeoptions" type="radio" checked= {{if (eq timelog.isTangible false ) "true"}}
                                                disabled= {{if (and isEditable (is-timeentry-within-week timelog.dateOfWork)) null true}}
                                                onclick= {{action (mut timelog.isTangible) value = "target.value"}}>
                                            <label class="form-check-label col-form-label">
                                                Intangible
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="input-group">
                                        <label class="col-4 col-form-label">Time:</label>
                                        <input class="col-3 from-control" value= {{timelog.hours}} readonly= {{if (and isEditable (is-timeentry-within-week timelog.dateOfWork)) null "true"}}
                                            onchange= {{action (mut timelog.hours) value = "target.value"}} min=0 max=23 type="number">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">:</div>
                                        </div>
                                        <input class="col-3 from-control" value= {{timelog.minutes}} readonly= {{if (and isEditable (is-timeentry-within-week timelog.dateOfWork)) null "true"}}
                                            onchange= {{action (mut timelog.minutes) value = "target.value"}} min=0 max=59 type="number">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="input-group">
                                        <label class=" col-4 col-form-label">Project:</label>
                                        <select class="col-8 form-control" name="projects" readonly= {{if (and isEditable (is-timeentry-within-week timelog.dateOfWork)) null "true"}}
                                            onchange= {{action (mut timelog.projectId) value = "target.value" }}>
                                            {{#each projects as |project|}}
                                                <option value= {{project.projectId}} selected= {{if (eq project.projectId timelog.projectId) true }}>{{project.projectName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                {{#if (and isEditable (is-timeentry-within-week timelog.dateOfWork)) }}
                                    <div class="row w-100">
                                        <a href="#" class="actions" {{action "saveEditsToTimelog" timelog}}>Save Changes</a>
                                        <a href="#" class="actions" {{action "deleteTimelog" timelog}}> Delete</a>
                                    </div>
                                {{/if}}
                            </div>
                            <div class="col-7">
                                {{tinymce-editor options=options value=timelog.notes onValueChanged=(action (mut timelog.notes))  }}
                            </div>
                        </form>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
{{else}}
    <small> No time enteries for this period</small>
{{/if}}